<h2>Kindly build your profile by clicking the <strong>'Build profile'</strong> button</h2>
{{#if addNewDriver}}

<h3>Build Profile</h3>
 <div>
   <form>
     <div class="form-group">
       <label for="firstName">First Name</label>
       {{input value=firstName id="firstName"}}
     </div>

     <div class="form-group">
       <label for="secondName">Second Name</label>
       {{input value=secondName id="secondName"}}
     </div>

     <div class="form-group">
       <label for="phone">Phone Number</label>
       {{input value=phone id="phone"}}
     </div>

     <div class="form-group">
       <label for="image">Upload vehicle image</label>
       {{input value=image id="image"}}
     </div>

     <div class="form-group">
       <label for="type">Vehicle Type</label>
       {{input value=type id="type"}}
     </div>
     <div class="form-group">
       <label for="tonnage">Tonnage</label>
       {{input value=tonnage id="tonnage"}}
     </div>

     <button class="btn-primary btn-lg" {{action 'saveDriver'}}>Save Details</button>
   </form>
 </div>
{{else}}
  <button class="btn-primary btn-lg"{{action 'profileFormShow'}}>Build Profile</button>
{{/if}}
